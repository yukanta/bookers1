<html>
 <head>
  <title>WebCampBackendNew</title>
 </head>
<body>
 <h1>Books</h1>
 <table>
  <thead>
     <th>Title</th>
     <th>Body</th>
  </thead>
  <tbody>
   
    <% @books.each do |book| %>
    <tr>
     <th><%= book.title %></th>
     <th><%= book.body %></th>
     <th><%= link_to 'show', book_path(book.id) %></th>
     <th><%= link_to 'edit', edit_book_path(book.id) %></th>
     <th><%= link_to 'Destroy', book_path(book.id) ,method: :delete, "data-confirm" => "Are you sure？"  %></th>
    </tr>
    
    <% end %>    
     
  </tbody>
 </table>
         
 <h2>New book</h2>
 
<!-- form_withにオプション追記 -->
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Create Book' %></p>
  
<% end %>        

</body>
</html>